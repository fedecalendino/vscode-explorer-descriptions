{
	"name": "explorer-descriptions",
	"displayName": "Explorer Descriptions",
	"description": "Allow to define descriptions and comments for files and folders to show on a sidebar explorer.",
	"version": "0.1.0",
	"publisher": "fedecalendino",
	"private": false,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/fedecalendino/vscode-explorer-descriptions"
	},
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:fileExplorer",
		"onLanguage:json",
		"onLanguage:jsonc",
		"onCommand:testView.reveal"
	],
	"main": "./out/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "fileExplorer",
					"name": "Explorer Descriptions"
				}
			]
		},
		"commands": [
			{
				"command": "fileExplorer.openFile",
				"title": "Open File"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint . --ext .ts,.tsx"
	},
	"devDependencies": {
		"@types/mkdirp": "^0.5.2",
		"@types/node": "^16.11.7",
		"@types/rimraf": "^2.0.2",
		"@types/vscode": "^1.67.0",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.13.0",
		"typescript": "^4.7.2"
	},
	"dependencies": {
		"ftp": "^0.3.10",
		"jsonc-parser": "^0.4.2",
		"minimist": "^1.2.6",
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.2"
	}
}
