{
	"name": "fsdocs",
	"displayName": "File Structure Docs",
	"description": "Allow to document the contents of specific files and folders on your project.",
	"icon": "images/icon.png",
	"version": "0.3.0",
	"publisher": "fedecalendino",
	"private": false,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/fedecalendino/vscode-fsdocs"
	},
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:fsdocs-explorer",
		"onLanguage:json",
		"onLanguage:jsonc",
		"onCommand:testView.reveal"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "fsdocs-activity-bar",
					"title": "File Structure Docs",
					"icon": "$(book)" 
				}
			]
		},
		"views": {
			"fsdocs-activity-bar": [
				{
					"id": "fsdocs-explorer",
					"name": "File Structure Docs"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "fsdocs-explorer.open-config-file",
					"group": "navigation",
					"icon": "$(edit)",
					"when": "view == fsdocs-explorer"
				},
				{
					"command": "fsdocs-explorer.refresh",
					"group": "navigation",
					"icon": "$(reload)",
					"when": "view == fsdocs-explorer"
				}
			],
			"view/item/context": [
				{
					"command": "fsdocs-explorer.reveal",
					"group": "1_actions",
					"when": "view == fsdocs-explorer"
				},
				{
					"command": "fsdocs-explorer.copy_name",
					"group": "1_actions",
					"when": "view == fsdocs-explorer"
				},
				{
					"command": "fsdocs-explorer.copy_label",
					"group": "1_actions",
					"when": "view == fsdocs-explorer"
				}
			]
		},
		"commands": [
			{
				"command": "fsdocs-explorer.open",
				"title": "Open file"
			},
			{
				"command": "fsdocs-explorer.copy_label",
				"title": "Copy label"
			},
			{
				"command": "fsdocs-explorer.copy_name",
				"title": "Copy name"
			},
			{
				"command": "fsdocs-explorer.open-config-file",
				"title": "Open config file"
			},
			{
				"command": "fsdocs-explorer.reveal",
				"title": "Reveal in editor"
			},
			{
				"command": "fsdocs-explorer.refresh",
				"title": "Refresh"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint . --ext .ts,.tsx"
	},
	"devDependencies": {
		"@types/mkdirp": "^0.5.2",
		"@types/node": "^16.11.7",
		"@types/rimraf": "^2.0.2",
		"@types/vscode": "^1.67.0",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.13.0",
		"typescript": "^4.7.2"
	},
	"dependencies": {
		"clipboardy": "^3.0.0",
		"ftp": "^0.3.10",
		"jsonc-parser": "^0.4.2",
		"minimist": "^1.2.6",
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.2"
	}
}
